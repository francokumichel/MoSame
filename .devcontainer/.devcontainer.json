{
  "name": "MoSame Project Space",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "backend",
  "runServices": ["db", "frontend"], 
  "workspaceFolder": "/app",
  "forwardPorts": [5000, 8080, 1433],
  "portsAttributes": {
    "5000": { "label": "Backend (Flask)", "visibility": "public" },
    "8080": { "label": "Frontend (Vue)", "visibility": "public", "onAutoForward": "openPreview" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "Vue.volar",
        "ms-mssql.mssql"
      ]
    }
  },
  "remoteUser": "root",
  "postCreateCommand": "chmod +x ./entrypoint.sh && ./entrypoint.sh"
}