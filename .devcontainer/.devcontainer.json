{
  "name": "MoSame Project",
  "dockerComposeFile": ["../docker-compose.yml"],
  "workspaceFolder": "/workspace",
  "forwardPorts": [5000, 8080, 1433],
  "portsAttributes": {
    "5000": { "label": "Backend", "visibility": "public" },
    "8080": { "label": "Frontend", "visibility": "public", "onAutoForward": "openPreview" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "Vue.volar",
        "ms-mssql.mssql"
      ]
    }
  },
  "remoteUser": "vscode", 
  "postCreateCommand": "chmod +x back-end/entrypoint.sh && docker-compose up -d"
}